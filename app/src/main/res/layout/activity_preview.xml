<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sample.activity.PreviewActivity">
    <ImageView
            android:id="@+id/preview_imageview"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
            android:id="@+id/button_gmail_share"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="200dp"
            android:layout_marginRight="28dp"
            android:layout_width="68dp"
            android:scaleType="fitXY"
            android:layout_height="58dp"
            android:contentDescription="@null"
            android:src="@drawable/gmail_logo"/>

    <ImageView
            android:id="@+id/button_whatsapp_share"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="28dp"
            android:layout_width="60dp"
            android:scaleType="fitXY"
            android:layout_height="58dp"
            android:padding="8dp"
            android:contentDescription="@null"
            android:src="@drawable/whatsapp_share"/>

</RelativeLayout>